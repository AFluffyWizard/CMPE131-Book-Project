<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <Button
        android:id="@+id/tab_list_button_customlists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Custom Lists"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tab_list_label_recommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended Books"
        android:textSize="24sp"
        android:paddingTop="16dp"
        android:paddingLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/tab_list_button_customlists"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ScrollView
        android:id="@+id/tab_list_scrollview_recommended"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        android:padding="4dp"
        android:background="#e3e3e3"
        app:layout_constraintTop_toBottomOf="@id/tab_list_label_recommended"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>